{
  "name": "@aio-chat/service",
  "version": "1.0.1-13",
  "type": "module",
  "description": "All in one chat includes a web component and a backend service for real-time chat. This is the server package of @aio-chat",
  "main": "./dist/exports.cjs",
  "module": "./dist/exports.js",
  "exports": {
    ".": {
      "require": "./dist/exports.cjs",
      "import": "./dist/exports.js"
    }
  },
  "scripts": {
    "dev": "node --loader ts-node/esm src/index.ts",
    "build": "tsup exports.js --format cjs,esm --dts",
    "build:datasource": "tsup src/database/dataSourceRef.ts --format cjs,esm --dts --out-dir dist",
    "build:migrations": "tsup src/database/migrations/* --format cjs --dts --out-dir dist/migrations",
    "test": "jest"
  },
  "peerDependencies": {
    "mysql2": "^3.13.0",
    "pg": "^8.7.0"
  },
  "dependencies": {
    "@aio-chat/shared": "^1.0.1-13",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "reflect-metadata": "^0.1.14",
    "socket.io": "^4.5.4",
    "sqlite3": "^5.1.7",
    "tsup": "^8.4.0",
    "typeorm": "^0.3.12",
    "typescript": "^4.9.5",
    "@types/node": "^18.11.9"
  },
  "devDependencies": {
    "@swc/core": "^1.11.21",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.1"
  },
  "files": [
    "dist",
    "docs",
    "src",
    "src/database",
    "src/config/config.server.ts",
    "src/helper.ts",
    "README.md",
    "LICENSE",
    "package.json",
    "tsconfig.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mamqek/aio-chat"
  },
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "keywords": [
    "chat",
    "real-time",
    "aio-chat",
    "all-in-one-chat",
    "communication",
    "chat-service",
    "socket",
    "database"
  ],
  "author": "Mamqek",
  "license": "MIT"
}
